<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">
    <h2 class="mb-4">Sign In</h2>
    <form action="/user/signin" method="POST">

      <!-- Email -->
      <div class="mb-3">
        <label for="signinEmail" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" id="signinEmail" aria-describedby="emailHelp" required>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="signinPassword" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="signinPassword" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-success">Sign In</button>

      <!-- Optional Link to Signup -->
      <p class="mt-3">Don't have an account? <a href="/user/signup">Sign up</a></p>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>